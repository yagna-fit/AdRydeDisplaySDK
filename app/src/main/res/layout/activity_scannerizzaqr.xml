<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScannerQRActivity">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scannerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="@android:color/white"
        app:frameCornersRadius="0dp"
        app:frameCornersSize="50dp"
        app:frameSize="0.75"
        app:frameThickness="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maskColor="#77000000" />
    <EditText
        android:id="@+id/editedMacCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="50dp"
        android:text="be:d1:1f:35:dd:c5"
        android:textColor="#F57C00"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/resultQR"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/connectBtn"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_marginStart="178dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="50dp"
        android:text="Connect"
        android:background="#fff"
        android:textColor="#0288D1"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@id/editedMacCode"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editedMacCode" />
    <TextView
        android:id="@+id/resultQR"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:layout_marginStart="178dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="50dp"
        android:text=""
        android:textColor="#FFEB3B"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>